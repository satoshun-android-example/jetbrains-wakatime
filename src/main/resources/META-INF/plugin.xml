<idea-plugin>
    <id>com.github.satoshun.example.wakatime</id>
    <name>SatoShun Wakatime testing</name>
    <vendor email="shun.sato1@gmail.com" url="https://satoshun.github.io">satoshun</vendor>

    <description><![CDATA[
      Metrics, insights, and time tracking automatically generated from your programming activity.<br />
      <br />
      <b>Installation</b><br />
      <br />
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>

    <idea-version since-build="123"/>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <application-components>
        <!-- Add your application components here -->
        <component>
            <implementation-class>com.wakatime.intellij.plugin.WakaTime</implementation-class>
        </component>
    </application-components>

    <actions>
        <!-- Add your actions here -->
        <action id="pluginMenu" class="com.wakatime.intellij.plugin.PluginMenu" text="WakaTime"/>
    </actions>
</idea-plugin>
